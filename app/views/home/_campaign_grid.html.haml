.campaign-grid
  -  @trending_campaigns_companies.each do |campaign|
    = render 'home/campaign_snapshot', {campaign: campaign, klass: 'debated', style: 'display: inline-block;'}
  - @most_funded_companies.each do |campaign|
    = render 'home/campaign_snapshot', {campaign: campaign, klass: 'most-funded', style: 'display: none;'}
  - @most_successful_campaigns.each do |campaign|
    = render 'home/campaign_snapshot', {campaign: campaign, klass: 'successes', style: 'display: none;'}
  
