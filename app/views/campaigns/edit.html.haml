%h2 Edit Campaign
= semantic_form_for @campaign do |f|
  #topic_input
    = f.input :topic
  = f.input :tag_list, placeholder: "Tags separated by commas"
  #opposing_campaigns
  
  = f.input :title
  = f.input :video_url 
  = f.input :image_url
  = f.input :short_blurb, as: :text
  = f.text_area :pitch, :class => 'ckeditor'
  = f.input :location 
  = f.input :cause_url 
  = f.input :funding_deadline, as: :date_picker
  = f.input :funding_goal
  = f.actions :submit, :cancel
  = link_to 'delete', :confirm => 'Are you sure?', :method => :delete